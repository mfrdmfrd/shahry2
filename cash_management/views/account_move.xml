<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_move_journal_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="document_id"/>
                </xpath>

                <xpath expr="//field[@name='tax_totals_json']" position="before">
                    <field name="total_before_discount" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'refund'))]}"/>
                    <field name="total_discount" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'refund'))]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>