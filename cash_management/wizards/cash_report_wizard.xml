<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="cash_report_wizard" model="ir.ui.view">
           <field name="name">cash_report_wizard</field>
           <field name="model">cash.report.wizard</field>
           <field name="arch" type="xml">
               <form string="">
                   <group>
                       <group>
                            <field name="date_from" required="1"/>
                       </group>
                       <group>
                            <field name="date_to" required="1"/>
                       </group>
                   </group>
                   <group>
                       <group>
                            <field name="journal_id" required="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                       </group>
                   </group>
                   <footer>
                        <button string="Print" name="print_report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
               </form>
           </field>
       </record>

        <record id="cash_report_wizard_act" model="ir.actions.act_window">
            <field name="name">طباعة تقرير الخزينة</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cash.report.wizard</field>
<!--            <field name="binding_model_id" ref='model_ozoon_elkhezana'/>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="cash_report_menu_item" name="Cash Report"
                  parent="cash_management.direct_expense_menu"
                  action="cash_report_wizard_act" sequence="10"/>

    </data>
</odoo>
